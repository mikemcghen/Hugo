# Hugo Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# Database Configuration
# ============================================================================

DB_PASSWORD=hugo_password_change_me
POSTGRES_CONNECTION_STRING=postgresql://hugo_user:hugo_password_change_me@localhost:5432/hugo

# ============================================================================
# API Keys
# ============================================================================

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: OpenAI API Key (for embeddings or fallback)
# OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Service Configuration
# ============================================================================

# Whisper Model Size: tiny, base, small, medium, large
WHISPER_MODEL=base

# Piper Voice Model
PIPER_VOICE=en_US-lessac-medium

# ============================================================================
# Hugo Configuration
# ============================================================================

# Hugo's operational mode: interactive, service, low_power
HUGO_MODE=interactive

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Session memory retention (days)
SESSION_RETENTION_DAYS=7

# Long-term memory retention (days, 0 = forever)
LONGTERM_RETENTION_DAYS=0

# ============================================================================
# Security
# ============================================================================

# Enable/disable features
ENABLE_VOICE_INPUT=true
ENABLE_VOICE_OUTPUT=true
ENABLE_SKILL_AUTOINSTALL=false
ENABLE_AUTONOMOUS_MAINTENANCE=true

# Require manual approval for actions
REQUIRE_CONSENT_FILE_WRITE=true
REQUIRE_CONSENT_SYSTEM_COMMAND=true
REQUIRE_CONSENT_SKILL_INSTALL=true

# ============================================================================
# Performance
# ============================================================================

# GPU acceleration
USE_GPU=true
GPU_DEVICE_ID=0

# Embedding model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Memory limits
MAX_CACHE_SIZE_MB=500
MAX_SHORT_TERM_MESSAGES=1000

# ============================================================================
# Networking (if using remote services)
# ============================================================================

# WIREGUARD_CONFIG=/path/to/wg0.conf
# PROXY_HOST=your.proxy.host
# PROXY_PORT=8080

# ============================================================================
# Development
# ============================================================================

# Development mode (more verbose logging, etc.)
DEV_MODE=true

# Skip Docker and use local services (for development)
SKIP_DOCKER=false
